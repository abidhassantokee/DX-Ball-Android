<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:backgroundTint="#009688">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:backgroundTint="#009688">

            <TextView
                android:id="@+id/display"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30sp"
                android:text="Please Select a Stage to Start The Game"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:backgroundTint="#009688"
                android:maxLines="100"
                android:scrollbars="vertical"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:backgroundTint="#FF1744">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#FF1744">

                <Button
                    android:id="@+id/stage1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage5"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#FF1744">

                <Button
                    android:id="@+id/stage6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage8"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage9"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/stage10"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="10"
                    android:onClick="btnStageEvent"
                    android:backgroundTint="#FF1744"
                    android:textSize="30dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
